{
    "proxmox": {
        "host": "YOUR_PROXMOX_HOST",
        "port": 8006,
        "verify_ssl": false,
        "service": "PVE"
    },
    "auth": {
        "user": "YOUR_USERNAME@pve",
        "token_name": "YOUR_TOKEN_NAME",
        "token_value": "YOUR_TOKEN_VALUE"
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "file": "proxmox_mcp.log"
    }
}
